{
  "name": "coc-deepl",
  "version": "0.0.2",
  "description": "deepl extension for coc.nvim",
  "author": "kqito <29191111+kqito@users.noreply.github.com>",
  "license": "MIT",
  "main": "dist/index.js",
  "keywords": [
    "coc.nvim"
  ],
  "engines": {
    "coc": "^0.0.82"
  },
  "scripts": {
    "lint": "eslint src --ext ts",
    "clean": "rimraf dist",
    "watch": "node esbuild.js --watch",
    "build": "node esbuild.js",
    "prepare": "node esbuild.js",
    "prepublishOnly": "node esbuild.js"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120,
    "semi": true
  },
  "devDependencies": {
    "@types/node": "^16.3.1",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "coc.nvim": "^0.0.82",
    "esbuild": "^0.8.42",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "prettier": "^2.2.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.1.2"
  },
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "coc-deepl configuration",
      "properties": {
        "deepl.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Whether enable coc-deepl extension or not"
        },
        "deepl.plan": {
          "type": "string",
          "default": "free",
          "description": "Plans for using deepl API",
          "anyOf": [
            {
              "enum": [
                "free",
                "pro"
              ]
            },
            {
              "type": "string"
            }
          ]
        },
        "deepl.targetLanguage": {
          "type": "string",
          "default": "EN",
          "anyOf": [
            {
              "enum": [
                "BG",
                "CS",
                "DA",
                "DE",
                "EL",
                "EN-GB",
                "EN-US",
                "EN",
                "ES",
                "ET",
                "FI",
                "FR",
                "HU",
                "IT",
                "JA",
                "LT",
                "LV",
                "NL",
                "PL",
                "PT-PT",
                "PT-BR",
                "PT",
                "RO",
                "RU",
                "SK",
                "SL",
                "SV",
                "ZH"
              ]
            },
            {
              "type": "string"
            }
          ],
          "description": "Language after translation. if it's not specified, will set 'EN'"
        }
      }
    }
  }
}
